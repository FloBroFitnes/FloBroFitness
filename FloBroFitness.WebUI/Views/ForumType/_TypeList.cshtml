@model IEnumerable<FloBroFitness.WebUI.Models.ForumTypeModel>

<div class="table-responsive">
    <table id="responsive-table" class="display table dt-responsive nowrap" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <a href="javascript:;" class="btn btn-info btn-xs"><i class="fa fa-edit"></i></a>
                            <a href="javascript:;" class="btn btn-info btn-xs"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

