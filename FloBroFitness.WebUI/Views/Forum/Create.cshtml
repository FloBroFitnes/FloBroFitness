@model FloBroFitness.WebUI.Models.ForumsModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="form-group" style="margin-top:20px">
        <div class="col-md-1"></div>
        <div class="col-sm-10">
            <div class="col-sm-6">
                <h3>Add Topic</h3>
            </div>
            <div class="col-sm-6">
                <a href="#" class="btn btn-primary pull-right">Topic List</a>
            </div>
            <div class="clearfix"></div>

            <hr />
        </div>
        <div class="col-md-1"></div>

       <div class="clearfix"></div>
    </div>
<div class="clearfix"></div>
<div class="row " style="margin-top:20px">

    <div class="col-md-2"></div>
    <div class="col-md-8">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <form>

                <div class="form-group row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Heading</label>
                            @Html.TextBoxFor(i => i.Name, new { @class = "form-control", @placeholder = "Enter Heading" })
                            @Html.ValidationMessageFor(i => i.Name, null, new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Type</label>
                            @Html.DropDownList("TypeId", ViewBag.FormTypeList as SelectList, "-- Select Type--", new { @class = "form-control" })

                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Body</label>
                    @Html.TextAreaFor(i => i.Body, new { @class = "form-control", @id = "classic-editor", @style = "height:300px !important" })
                    @*@Html.ValidationMessageFor(i => i.Price, null, new { @class = "text-danger" })*@
                </div>
                <button type="submit" class="btn btn-primary pull-right">Submit</button>
            </form>
        }
    </div>
    <div class="col-md-2"></div>
</div>

<style>
    .ck-content {
        height: 130px;
    }
</style>

@section scripts{
    <script>
        $(window).load(function () {

            $("html, body").animate({ scrollTop: 400 - 10 });
            ClassicEditor.create(document.querySelector('#classic-editor'))
                .catch(error => {
                    console.error(error);
                });
            $("#classic-editor").height('400px')
        });

    </script>
}
