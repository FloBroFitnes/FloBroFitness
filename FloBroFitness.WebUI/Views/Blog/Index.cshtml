<style>
    .ck-editor__editable {
        height: 200px;
    }
</style>
<link href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" rel="stylesheet" />
<form action="/Blog/Index" method="post" enctype="multipart/form-data">

    <div class="card">
        <div class="card-header">
            <h5>Add/Edit Blog</h5>
            <div class="card-header-right">
                <a href="/Blog/Blogs" class="btn btn-primary">View List</a>
            </div>
        </div>
    </div>
    <div class="card">

        <div class="card-block">
            <div class="form-group">
                <div class="row col-sm-12">
                    <div class="form-group col-sm-3">
                        <label>Title</label>
                        @Html.TextBoxFor(i => i.Title, new { @class = "form-control" })
                        @Html.ValidationMessageFor(i => i.Title, null, new { @class = "text-danger" })

                    </div>
                    <div class="form-group col-sm-3">
                        <label>Date</label>
                        @Html.TextBoxFor(i => i.Date, new { @class = "form-control date",@readonly="readonly" })
                        @Html.ValidationMessageFor(i => i.Date, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-sm-3">
                        <label>Tags</label>
                        @Html.TextBoxFor(i => i.Tags, new { @class = "form-control" })
                        @Html.ValidationMessageFor(i => i.Tags, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-sm-3">
                        <label>Active</label>
                        @Html.DropDownListFor(i => i.IsActive, new List<SelectListItem>
             { new SelectListItem() { Text = "Please Select", Value = "", Selected=true },
             new SelectListItem() { Text = "Yes", Value = "true" } ,
             new SelectListItem() { Text = "No", Value = "false" }
             },
             new { @class = "form-control " })
                        @Html.ValidationMessageFor(i => i.IsActive, null, new { @class = "text-danger" })
                    </div>

                </div>
                <div class="form-group col-md-12 mb-4">
                    <label>Content</label>
                    @Html.TextAreaFor(i => i.Content, new { @class = "form-control", @id = "classic-editor" })
                    @*@Html.ValidationMessageFor(i => i.Price, null, new { @class = "text-danger" })*@
                </div>

            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-footer">
            <h5></h5>
            <div class="pull-right">
                <button type="submit" class="btn btn-info">Save</button>
            </div>
        </div>
    </div>
</form>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
<script src="~/assets/plugins/ckeditor/js/ckeditor.js"></script>
<script>
    $('.date').datepicker({
        format: 'dd/mm/yyyy',
        changeMonth: true,
        changeYear: true,
        yearRange: '-100:+100',
        maxDate: new Date(2100, 1, 18)
    });
    $(window).on('load', function () {
        // classic editor
        ClassicEditor.create(document.querySelector('#classic-editor'))
            .catch(error => {
                console.error(error);
            });
    });
</script>
