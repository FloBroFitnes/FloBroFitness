@model FloBroFitness.WebUI.Models.Blog
@{
    ViewBag.Title = "Blogs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h5>Blog List</h5>
        <div class="card-header-right">
            <a href="/Blog/Index" class="btn btn-primary">Create</a>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-block">
        <div class="table-responsive">
            <table id="responsive-table" class="display table dt-responsive nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Tags</th>
                        <th>Active</th>
                        <th>Created By</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.lstBlog != null && Model.lstBlog.Count > 0) 
                    {
                        foreach (var item in Model.lstBlog)
                        {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Tags</td>
                        <td>@(item.IsActive==true?"Yes":"No")</td>
                        <td>@item.Username</td>
                        <td>
                            <a href="/Blog/Index?id=@item.ID" class="btn btn-info btn-xs"><i class="fa fa-edit"></i></a>
                            <a href="/Blog/DeleteBlog?id=@item.ID" class="btn btn-info btn-xs btnDelete" ><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(".btnDelete").on("click", function (e) {
        e.preventDefault();
        var url = $(this).attr("href");
        if (confirm("Are you sure you want to delete this blog?")) {
            location.href = url;
        } else {
            return false;
        }
    })

</script>
